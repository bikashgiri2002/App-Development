<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCORE"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.044" />

    <TextView
        android:id="@+id/txt_user_score"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="64dp"
        android:gravity="center"
        android:text="0"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txt_user_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.224"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_computer_score"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="64dp"
        android:gravity="center"
        android:text="0"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/computer_choose_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.647"
        app:layout_constraintStart_toEndOf="@+id/txt_user_score" />

    <TextView
        android:id="@+id/txt_user_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/user_choose_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.224"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/user_choose_img"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/circular_view"
        android:contentDescription="user_choose"
        android:src="@drawable/stone_final"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.114"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.428" />

    <TextView
        android:id="@+id/computer_choose_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Computer"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/computer_choose_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.822"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/computer_choose_img"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/circular_view"
        android:contentDescription="computer_choose"
        android:src="@drawable/stone_final"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.865"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.428" />

    <RadioGroup
        android:id="@+id/userclicked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="136dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/stone_radio"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/custom_radio_button_selector"
            android:button="@android:color/transparent"
            android:drawableTop="@drawable/precious_stone_diamond_svgrepo_com"
            android:text="stone"
            android:textAlignment="center" />

        <RadioButton
            android:id="@+id/paper_radio"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/custom_radio_button_selector"
            android:button="@android:color/transparent"
            android:drawableTop="@drawable/paper_text_svgrepo_com"
            android:text="paper"
            android:textAlignment="center" />

        <RadioButton
            android:id="@+id/scissor_radio"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/custom_radio_button_selector"
            android:button="@android:color/transparent"
            android:drawableTop="@drawable/scissor_cut_cutter_scissors_office_school_svgrepo_com"
            android:text="scissor"
            android:textAlignment="center" />

    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>